<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jskj.course.ui.MainActivity">

    <FrameLayout
        android:id="@+id/container_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <!--<RadioButton-->
            <!--android:id="@+id/type_rb"-->
            <!--android:drawableTop="@drawable/home_type_selector"-->
            <!--android:text="分类"-->
            <!--style="@style/home_bottom_radio_button" />-->
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home_rb"
            android:drawableTop="@drawable/home_home_selector"
            android:text="首页"
            style="@style/home_bottom_radio_button" />
        <RadioButton
            android:id="@+id/course_rb"
            android:drawableTop="@drawable/home_my_course_selector"
            android:text="课程"
            style="@style/home_bottom_radio_button" />
        <RadioButton
            android:id="@+id/user_rb"
            android:drawableTop="@drawable/home_user_selector"
            android:text="个人中心"
            style="@style/home_bottom_radio_button" />

    </RadioGroup>
</LinearLayout>
